generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id         String   @id @default(uuid())
  title      String
  createdAt  DateTime @default(now())
  lessons    Lesson[]
  dictionary Dictionary[]
}

model Lesson {
  id      String @id @default(uuid())
  bookId  String
  content String
  book    Book   @relation(fields: [bookId], references: [id])
}

model Dictionary {
  id      String @id @default(uuid())
  bookId  String
  word    String
  meaning String
  book    Book   @relation(fields: [bookId], references: [id])
}
